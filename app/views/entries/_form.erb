<%= form_for @entry do |f| %>

<% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@entry.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :caption %><br>
    <%= f.text_area :caption %>
  </p>

  <p>
    <%= f.label :photo_url %><br>
    <%= f.text_area :photo_url, :value => "#{@gify.imageURL}" %>
  </p>

  <p>
    <%= f.label :all_tags %><br>
    <%= f.text_area :all_tags %>
  </p>

  <p>
    <%= f.label :date_taken %><br>
    <%= f.text_field :date_taken, :value => "#{Time.at(Time.now.to_i).strftime("%B %e, %Y at %I:%M %p")}"%>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

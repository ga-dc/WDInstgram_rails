<h1>Entries</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Photo</th>
    <th>Date</th>
  </tr>

  <% @entries.each do |entry| %>
    <tr>
      <td><%= entry.author %></td>
      <td><%= image_tag(entry.photo_url) %></td>
      <td><%= entry.date_taken %></td>
      <td><%= link_to 'Show', entry_path(entry) %></td>
      <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    </tr>
    <% end %>
</table>

<p>
  <%= link_to 'New entry', new_entry_path %>
</p>

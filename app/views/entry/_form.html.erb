<% form_for @entry do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">

        <h2>errors:</h2>
        <% @entry.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>

    </div>
  <% end  %>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :photo_url %><br>
    <%= f.text_field :photo_url %>
  </p>

  <p>
    <%= f.label :date_taken %><br>
    <%= f.text_field :date_taken %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 <% end %>

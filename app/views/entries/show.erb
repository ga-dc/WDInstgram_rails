
<p>
  <img src="<%= @entry.photo_url %>" alt="image">
</p>

<p>
  <%= @entry.caption %>
</p>

<h2>Comments</h2>
<% @entry.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.author %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

<td><%= link_to 'Edit', edit_entry_comment_path(@entry, comment) %></td>
<td><%= link_to 'Destroy', entry_comment_path(@entry, comment),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>

<% end %>

<h2>Add a comment:</h2>
<%= form_for([@entry, @entry.comments.build]) do |f| %>

  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Edit', edit_entry_path(@entry) %> |
<%= link_to 'Destroy', entry_path(@entry),
              method: :delete,
              data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', entries_path %>
